{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Playdate Simulator (Run)",
            "type": "node-terminal",
            "request": "launch",
            "command": "${env:PLAYDATE_SDK_PATH}/bin/Playdate\\ Simulator.app/Contents/MacOS/Playdate\\ Simulator",
            "args": ["${workspaceFolder}/${workspaceFolderBasename}.pdx"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: build"
        }
    ]
}